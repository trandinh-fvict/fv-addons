<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- Define custom paper format for survey PDF -->
	<record id="paperformat_survey_user_input" model="report.paperformat">
		<field name="name">Survey User Input Paper Format</field>
		<field name="default" eval="False"/>
		<field name="format">custom</field>
		<field name="page_height">0</field>
		<field name="page_width">0</field>
		<field name="orientation">Landscape</field>
		<field name="margin_top">10</field>
		<field name="margin_bottom">5</field>
		<field name="margin_left">3</field>
		<field name="margin_right">3</field>
		<field name="header_line" eval="False"/>
		<field name="header_spacing">0</field>
		<field name="dpi">96</field>
	</record>

	<!-- Update report action to use custom paper format -->
	<record id="action_report_survey_user_input_pdf" model="ir.actions.report">
		<field name="name">Export PDF for TPM</field>
		<field name="model">survey.user_input</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">survey_user_input_pdf.survey_user_input_report_template</field>
		<field name="report_file">survey_user_input_pdf.survey_user_input_report_template</field>
		<field name="print_report_name">'TPM_Assistant_By_%s' % (object.partner_id.display_name or object.email or
			'Unknown')
		</field>
		<field name="binding_model_id" ref="survey.model_survey_user_input"/>
		<field name="binding_type">report</field>
		<field name="paperformat_id" ref="paperformat_survey_user_input"/>
	</record>
</odoo>
