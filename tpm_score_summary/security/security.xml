<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">

		<!-- Security Groups -->
		<record id="group_vem_user" model="res.groups">
			<field name="name">TPM Score Summary User</field>
			<field name="category_id" ref="base.module_category_operations"/>
			<field name="comment">Users can read evaluations in draft/submitted state</field>
		</record>

		<record id="group_vem_manager" model="res.groups">
			<field name="name">TPM Score Summary Manager</field>
			<field name="category_id" ref="base.module_category_operations"/>
			<field name="implied_ids" eval="[(4, ref('group_vem_user'))]"/>
			<field name="comment">Managers can submitted evaluations and manage all data</field>
		</record>

		<!-- Record Rules -->
		<record id="vem_vendor_rule_user" model="ir.rule">
			<field name="name">TPM Team: User Access</field>
			<field name="model_id" ref="model_vem_vendor"/>
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('group_vem_user'))]"/>
			<field name="perm_read" eval="1"/>
			<field name="perm_write" eval="0"/>
			<field name="perm_create" eval="0"/>
			<field name="perm_unlink" eval="0"/>
		</record>

		<record id="vem_vendor_rule_manager" model="ir.rule">
			<field name="name">TPM Team: Manager Access</field>
			<field name="model_id" ref="model_vem_vendor"/>
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('group_vem_manager'))]"/>
			<field name="perm_read" eval="1"/>
			<field name="perm_write" eval="1"/>
			<field name="perm_create" eval="1"/>
			<field name="perm_unlink" eval="1"/>
		</record>

		<record id="vem_evaluation_rule_user" model="ir.rule">
			<field name="name">TPM Evaluation: User Access</field>
			<field name="model_id" ref="model_vem_evaluation"/>
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('group_vem_user'))]"/>
			<field name="perm_read" eval="1"/>
			<field name="perm_write" eval="1"/>
			<field name="perm_create" eval="1"/>
			<field name="perm_unlink" eval="0"/>
		</record>

		<record id="vem_evaluation_rule_manager" model="ir.rule">
			<field name="name">TPM Evaluation: Manager Access</field>
			<field name="model_id" ref="model_vem_evaluation"/>
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('group_vem_manager'))]"/>
			<field name="perm_read" eval="1"/>
			<field name="perm_write" eval="1"/>
			<field name="perm_create" eval="1"/>
			<field name="perm_unlink" eval="1"/>
		</record>

		<record id="vem_question_rule_user" model="ir.rule">
			<field name="name">TPM Question: User Access</field>
			<field name="model_id" ref="model_vem_eval_question"/>
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('group_vem_user'))]"/>
			<field name="perm_read" eval="1"/>
			<field name="perm_write" eval="0"/>
			<field name="perm_create" eval="0"/>
			<field name="perm_unlink" eval="0"/>
		</record>

		<record id="vem_question_rule_manager" model="ir.rule">
			<field name="name">TPM Question: Manager Access</field>
			<field name="model_id" ref="model_vem_eval_question"/>
			<field name="domain_force">[(1, '=', 1)]</field>
			<field name="groups" eval="[(4, ref('group_vem_manager'))]"/>
			<field name="perm_read" eval="1"/>
			<field name="perm_write" eval="1"/>
			<field name="perm_create" eval="1"/>
			<field name="perm_unlink" eval="0"/>
		</record>

	</data>
</odoo>

