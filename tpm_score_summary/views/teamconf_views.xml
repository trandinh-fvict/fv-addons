<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Vendor Tree View -->
		<record id="view_vendor_tree" model="ir.ui.view">
			<field name="name">vem.vendor.list</field>
			<field name="model">vem.vendor</field>
			<field name="arch" type="xml">
				<list string="Team Configuration">
					<field name="name"/>
					<field name="code" invisible="1"/>
					<field name="note"/>
					<field name="active"/>
				</list>
			</field>
		</record>

		<!-- Vendor Form View -->
		<record id="view_vendor_form" model="ir.ui.view">
			<field name="name">vem.vendor.form</field>
			<field name="model">vem.vendor</field>
			<field name="arch" type="xml">
				<form string="Team Configuration">
					<sheet>
						<widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
						        invisible="active == True"/>
						<group>
							<group>
								<field name="name" placeholder="Enter vendor name..."/>
								<field name="code" placeholder="Optional vendor code..."/>
							</group>
							<group>
								<field name="active"/>
							</group>
						</group>
						<notebook>
							<page string="Notes">
								<field name="note" placeholder="Additional notes about this team..."/>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Vendor Search View -->
		<record id="view_vendor_search" model="ir.ui.view">
			<field name="name">vem.vendor.search</field>
			<field name="model">vem.vendor</field>
			<field name="arch" type="xml">
				<search string="Search Team">
					<field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
					<field name="code" string="Code" filter_domain="[('code', 'ilike', self)]"/>
					<separator/>
					<filter name="active" string="Active" domain="[('active', '=', True)]"/>
					<filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
					<group expand="0" string="Group By">
						<filter name="group_by_active" string="Status" context="{'group_by': 'active'}"/>
					</group>
				</search>
			</field>
		</record>

		<!-- Vendor Action -->
		<record id="action_vendor_tree" model="ir.actions.act_window">
			<field name="name">Team Configuration</field>
			<field name="res_model">vem.vendor</field>
			<field name="view_mode">list,form</field>
			<field name="view_id" ref="view_vendor_tree"/>
			<field name="search_view_id" ref="view_vendor_search"/>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create your first Team!
				</p>
				<p>
				</p>
			</field>
		</record>

		<!-- Question Tree View -->
		<record id="view_question_tree" model="ir.ui.view">
			<field name="name">vem.eval.question.list</field>
			<field name="model">vem.eval.question</field>
			<field name="arch" type="xml">
				<list string="Questions Configuration" editable="bottom">
					<field name="sequence" widget="handle"/>
					<field name="name"/>
					<field name="active"/>
				</list>
			</field>
		</record>

		<!-- Question Form View -->
		<record id="view_question_form" model="ir.ui.view">
			<field name="name">vem.eval.question.form</field>
			<field name="model">vem.eval.question</field>
			<field name="arch" type="xml">
				<form string="Questions Configuration">
					<sheet>
						<widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
						        invisible="active == True"/>
						<group>
							<field name="name"/>
							<field name="sequence"/>
							<field name="active"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Question Action -->
		<record id="action_question_tree" model="ir.actions.act_window">
			<field name="name">Questions Configuration</field>
			<field name="res_model">vem.eval.question</field>
			<field name="view_mode">list,form</field>
			<field name="view_id" ref="view_question_tree"/>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Questions
				</p>
				<p>
				</p>
			</field>
		</record>

	</data>
</odoo>
